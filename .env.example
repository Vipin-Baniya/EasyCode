# Project Core Environment Configuration

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=postgresql://projectcore:projectcore@localhost:5432/projectcore
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Model Selection
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=8192
LLM_TEMPERATURE=0.7

# Rate Limiting
LLM_RATE_LIMIT_REQUESTS=100
LLM_RATE_LIMIT_PERIOD=60

# Context Management
LLM_MAX_CONTEXT_MESSAGES=50

# =============================================================================
# EXECUTION SETTINGS
# =============================================================================

# Sandbox Configuration
ENABLE_CODE_EXECUTION=true
SANDBOX_TIMEOUT=300  # seconds
MAX_EXECUTION_TIME=600  # seconds

# File System
WORKSPACE_ROOT=/app/workspaces
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.tsx,.jsx,.json,.md,.txt,.yml,.yaml,.toml

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Permission Levels
DEFAULT_PERMISSION_LEVEL=review  # none, review, auto
REQUIRE_APPROVAL_FOR_DESTRUCTIVE=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session
SESSION_TIMEOUT=3600  # seconds

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_FILE=/var/log/projectcore/app.log

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Metrics (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# TESTING
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://projectcore:projectcore@localhost:5432/projectcore_test

# Test Settings
RUN_INTEGRATION_TESTS=true
TEST_TIMEOUT=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Hot Reload
AUTO_RELOAD=true

# Debug Tools
ENABLE_PROFILING=false
ENABLE_QUERY_LOGGING=false

# Mock Services (for development)
MOCK_LLM=false
MOCK_EXECUTION=false

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker Compose
COMPOSE_PROJECT_NAME=projectcore

# Postgres
POSTGRES_USER=projectcore
POSTGRES_PASSWORD=projectcore
POSTGRES_DB=projectcore

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_MULTI_REPO=true
FEATURE_ADVANCED_REFACTOR=true
FEATURE_COLLABORATIVE=false
FEATURE_WEBSOCKET_UPDATES=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real secrets
# 2. Use different values for production
# 3. Generate strong random values for SECRET_KEY and JWT_SECRET
# 4. Ensure ANTHROPIC_API_KEY is valid
# 5. Update CORS_ORIGINS to match your deployment domains
