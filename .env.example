# ── Application ───────────────────────────────────────────────────────────────
APP_NAME="Project Core"
ENVIRONMENT=development
DEBUG=false

# ── Security (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=changeme-generate-a-real-secret-key-32chars
JWT_SECRET=changeme-generate-a-real-jwt-secret-32chars

# ── Database ──────────────────────────────────────────────────────────────────
# Local dev with Docker:
DATABASE_URL=postgresql://projectcore:projectcore@localhost:5432/projectcore
# For SQLite (quick local testing without Docker):
# DATABASE_URL=sqlite:///./projectcore.db

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Anthropic LLM ─────────────────────────────────────────────────────────────
# Get your key at https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=8192
LLM_TEMPERATURE=0.7

# ── CORS ──────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ── Workspace ─────────────────────────────────────────────────────────────────
WORKSPACE_ROOT=./workspaces

# ── Feature flags ─────────────────────────────────────────────────────────────
FEATURE_WEBSOCKET_UPDATES=true
FEATURE_COLLABORATIVE=false

# ── Monitoring (optional) ─────────────────────────────────────────────────────
# SENTRY_DSN=https://xxx@sentry.io/xxx
